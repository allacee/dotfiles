#!/bin/bash
VLC_PID_FILE=/tmp/music-player-pid


if [ -f "$VLC_PID_FILE" ]
then

	case "$BLOCK_BUTTON" in
    1|3)
		playerctl --player=vlc play-pause
		;;
	2)
		echo " "
		VLC_PID=$(cat "$VLC_PID_FILE")
		rm "$VLC_PID_FILE"
		kill -9 "$VLC_PID"
		pkill -RTMIN+15 i3blocks &
		echo " "
		;;
	esac

	STATUS=$(playerctl --player=vlc status)

	if [ $STATUS == "Paused" ]
	then
		echo " &#xf04b; "
	else
		# echo " &#xf28b; "
		echo " &#xf04c; "

	fi



fi
