# i3status configuration file used for 'i3b-connection' function
general {
        interval = 5
		separator = ''
}

order += "wireless wlo1"
order += "ethernet eno1"

wireless wlo1 {
        format_up = "&#xf1eb;%quality %essid"
        format_down = "&#xf1eb; down"
}

ethernet eno1 {
        # if you use %speed, i3status requires root privileges
        format_up = "| &#xf0ac; %speed"
        format_down = ""
}
