#i3 configuration

set 							$mod Mod4

# Font for window titles.
font pango: 					Noto Mono 12

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier 				$mod

# =========================================================

# basic window setup
new_window 						1pixel
default_border 					pixel 3
gaps 							inner 5
gaps 							outer 5
smart_borders 					on
client.focused          #4c7899 #285577 #ffffff #2e9ef4   #CCFF00

# =========================================================

# shortcuts
# launch a terminal
	bindsym $mod+t 				exec $TERMINAL
# launch a browser
	bindsym $mod+f 				exec $BROWSER ; workspace $ws1
# launch ranger in terminal
	bindsym $mod+r 				exec $TERMINAL -e ranger
# launch telegram
#	bindsym $mod+i 				exec telegram-desktop ; workspace $ws10

# =========================================================

# multimedia buttons

# sounds controls
bindsym XF86AudioRaiseVolume 	exec --no-startup-id pactl set-sink-volume 0 +5% && pactl set-sink-mute 0 0 && i3b-sig 10
bindsym XF86AudioLowerVolume 	exec --no-startup-id pactl set-sink-volume 0 -5% && i3b-sig 10
bindsym XF86AudioMute 			exec --no-startup-id pactl set-sink-mute 0 toggle && i3b-sig 10

# screen brightness controls
bindsym XF86MonBrightnessUp 	exec --no-startup-id light -A 5 && i3b-sig 11
bindsym XF86MonBrightnessDown 	exec --no-startup-id light -U 5 && i3b-sig 11

# media controls
bindsym XF86AudioPlay 			exec playerctl play
bindsym XF86AudioPause 			exec playerctl pause
bindsym XF86AudioNext 			exec playerctl next
bindsym XF86AudioPrev 			exec playerctl previous
# switching language signals i3blocks
# line bellow commented because pressing CL disfocusing current window for a while and thats sucks
# bindsym --release Caps_Lock exec i3b-sig 13
bindsym --release Num_Lock 		exec i3b-sig 13

# screenshots
bindsym Print 					exec screenshot-make && screenshot-to-clipboard && mplayer ~/Music/Notifications/light.mp3
bindsym Control+Print --release	exec screenshot-make -s && screenshot-to-clipboard && mplayer ~/Music/Notifications/light.mp3

# =========================================================

# default windows managment keybindings
# kill focused window
bindsym $mod+Shift+q 			kill
bindsym Mod1+F4 				kill

# start rofi program launcher (a program launcher)
bindsym $mod+d 					exec rofi -show run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+Left 				focus left
bindsym $mod+Down 				focus down
bindsym $mod+Up 				focus up
bindsym $mod+Right 				focus right

bindsym Mod1+Tab 				focus right
bindsym Mod4+Tab 				focus right

# move focused window
bindsym $mod+Shift+Left 		move left
bindsym $mod+Shift+Down 		move down
bindsym $mod+Shift+Up 			move up
bindsym $mod+Shift+Right 		move right

# split in horizontal orientation
bindsym $mod+h 					split h

# split in vertical orientation
bindsym $mod+v 					split v

# enter fullscreen mode for the focused container
bindsym $mod+Shift+f 			fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s 			layout stacking
bindsym $mod+Shift+w 			layout tabbed
bindsym $mod+Shift+e 			layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space 		floating toggle

# change focus between tiling / floating windows
bindsym $mod+space 				focus mode_toggle

# focus the parent container
bindsym $mod+shift+a 			focus parent

# ===========================================================

# workspaces
set $ws1 "1:&#xf269;"
set $ws2 "2:&#xf120;"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10: &#xf2c6;"

# background pics alias
set $feh 						exec --no-startup-id feh --bg-scale

# switch to workspace
bindsym $mod+1 					workspace $ws1 ; $feh ~/Images/wp/manjaro-3.png
bindsym $mod+2 					workspace $ws2 ; $feh ~/Images/wp/manjaro-2.jpg
bindsym $mod+3 					workspace $ws3 ; $feh ~/Images/wp/manjaro-1.jpg
bindsym $mod+4 					workspace $ws4 ; $feh ~/Images/wp/manjaro-4.png
bindsym $mod+5 					workspace $ws5 ; $feh ~/Images/wp/manjaro-5.jpg
bindsym $mod+6 					workspace $ws6 ; $feh ~/Images/wp/manjaro-6.png
bindsym $mod+7 					workspace $ws7 ; $feh ~/Images/wp/manjaro-1.jpg
bindsym $mod+8 					workspace $ws8 ; $feh ~/Images/wp/manjaro-3.png
bindsym $mod+9 					workspace $ws9 ; $feh ~/Images/wp/manjaro-5.jpg
bindsym $mod+0 					workspace $ws10 ; $feh ~/Images/wp/manjaro-5.png

# move focused container to workspace
bindsym $mod+Shift+1 			move container to workspace $ws1
bindsym $mod+Shift+2 			move container to workspace $ws2
bindsym $mod+Shift+3 			move container to workspace $ws3
bindsym $mod+Shift+4 			move container to workspace $ws4
bindsym $mod+Shift+5 			move container to workspace $ws5
bindsym $mod+Shift+6 			move container to workspace $ws6
bindsym $mod+Shift+7 			move container to workspace $ws7
bindsym $mod+Shift+8 			move container to workspace $ws8
bindsym $mod+Shift+9 			move container to workspace $ws9
bindsym $mod+Shift+0 			move container to workspace $ws10

# =========================================================

# move fullscreen apps to their workspaces
for_window [class="Telegram"] 	move container to workspace $ws10
for_window [title="Firefox"] 	move container to workspace $ws1
# ===========================================================

# lock the screen
bindsym $mod+l 					exec "i3lock -fei ~/Images/wp/manjaro-8.png"

# reload the configuration file
bindsym $mod+Shift+c 			reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r 			restart

# launch exit menu
bindsym $mod+Shift+Escape 		exec --no-startup-id  rofi-exit

bindsym $mod+F1					exec --no-startup-id rofi-app-launcher # launch app launcher
bindsym $mod+F2 				exec --no-startup-id rofi-disks  # launch disks  manager
bindsym $mod+F3					exec --no-startup-id $TERMINAL -e nmtui # launch network manager


# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j 				resize shrink width 10 px or 10 ppt
        bindsym k 				resize grow height 10 px or 10 ppt
        bindsym l 				resize shrink height 10 px or 10 ppt
        bindsym semicolon 		resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left 			resize shrink width 10 px or 10 ppt
        bindsym Down 			resize grow height 10 px or 10 ppt
        bindsym Up 				resize shrink height 10 px or 10 ppt
        bindsym Right 			resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return 			mode "default"
        bindsym Escape 			mode "default"
        bindsym $mod+shift+p 	mode "default"
}

bindsym $mod+shift+p 			mode "resize"

# ================================================

# autolaunch applications and startup scripts
exec "xcompmgr -c"
exec "setxkbmap -model pc104 -layout us,ru -variant ,, -option grp:alt_shift_toggle"
exec "feh --no-startup-id --bg-scale ~/Images/wp/manjaro-1.jpg"
exec "nm-applet &"
exec --no-startup-id numlockx on

# ================================================

bar {
	font pango: Noto Mono, Awesome 12
	i3bar_command i3bar --transparency
	position top
	colors {
		background #333333BB
		statusline #FFFFFF
	}
	status_command i3blocks -c $DOTFILES/configs/i3/i3blocks.conf
}

